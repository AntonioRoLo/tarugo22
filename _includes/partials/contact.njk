<section class="contact" id="contacto">
  <h2 class="contact-title">{{ content.title }}</h2>

  <div class="contact-candela">
    <img
      src="{{ content.manager.img }}"
      alt="{{ content.manager.alt }}"
      class="contact-candela-photo"
      loading="lazy"
    >
    <strong class="contact-candela-name">{{ content.manager.name }}</strong>
    <p class="contact-candela-position">{{ content.manager.position }}</p>

    <address class="contact-candela-address">
      <ul>
        {% for link in content.manager.links %}
        <li>
          <a href="{{ link.url }}">
            {% if link.icon %}
            <img src="{{ link.icon }}" inline>
            {% endif %}
            {{ link.text }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </address>
  </div>

  <div class="contact-tarugo">
    {{ content.address | md | safe }}

    <address>
      <ul>
        {% for link in content.links %}
        <li>
          <a href="{{ link.url }}">
            {% if link.icon %}
            <img src="{{ link.icon }}" inline>
            {% endif %}
            {{ link.text }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </address>
  </div>
</section>