---
layout: layouts/base.njk
---
{% include "partials/navbar.njk" %}

<header class="header">
  <h1 class="header-title">{{ header.title }}</h1>
  <div class="header-intro">
      {{ header.intro | md | safe }}
  </div>
</header>

<section class="intro">
  <h2 class="intro-title">{{ openspace.title }}</h2>
  <div class="intro-aside">{{ openspace.aside | md | safe }}</div>

  <div class="intro-text">
    {{ openspace.excerpt | md | safe }}

    <figure class="intro-video">
      <tarugo-video id="video" class="video-ratio" data-id="746603787">
        <img src="/img/open-space-snapshot.jpg" alt="Open Space Tarugo">
        <a href="https://vimeo.com/746603787">#tarugoff</a>
      </tarugo-video>
    </figure>

    {{ openspace.text | md | safe }}
    <a href="{{ cta.url }}" class="button is-primary">{{ cta.text }}</a>
  </div>
</section>

<tarugo-filter class="activities">
  <form class="activities-filter">
    <div class="activities-tags">
    {% for value, name in activities.tags %}
      <label>
        <input type="checkbox" name="{{ value }}" value="1">
        <strong>{{ name | md(true) | safe }}</strong>
      </label>
    {% endfor %}
    </div>
  </form>

  <ul class="activities-items">  
    {% for item in activities.items %}
    <li class="activity item" data-tags="{{ item.tags | dump }}">
      <img src="{{ item.img }}" alt="" class="activity-image">
      <h2 class="activity-title">{{ item.title }}</h2>

      <div class="activity-description">
        {{ item.description | md | safe }}
      </div>
      {% for tag in item.tags %}
        {{ activities.tags[tag] | md(true) | safe }}
      {% endfor %}
    </li>
    {% endfor %}
  </ul>
</tarugo-filter>

